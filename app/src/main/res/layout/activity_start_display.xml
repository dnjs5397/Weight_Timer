<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartDisplay"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/calendar_button"
        android:layout_gravity="right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_calendar_month_24"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:padding="5dp"
            android:fontFamily="@font/minsans_regular"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="진행 세트 수"
            android:textColor="#998FEF"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/set_down_button"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_arrow_drop_down_24"/>

            <TextView
                android:fontFamily="@font/minsans_regular"
                android:id="@+id/set_count"
                android:textColor="#464958"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="50dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/set_up_button"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_arrow_drop_up_24"/>


        </LinearLayout>

        <TextView
            android:padding="5dp"
            android:fontFamily="@font/minsans_regular"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="세트 간 휴식 시간"
            android:textColor="#998FEF"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rest_down_button"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_arrow_drop_down_24"/>

            <TextView
                android:fontFamily="@font/minsans_regular"
                android:id="@+id/rest_count"
                android:textColor="#464958"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="50dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rest_up_button"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_arrow_drop_up_24"/>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:src="@drawable/ic_baseline_whatshot_24"
            android:background="@drawable/button_background"
            android:id="@+id/weight_start"
            android:layout_marginTop="50dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="득근!"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>