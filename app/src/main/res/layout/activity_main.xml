<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Timer.TImerRunning">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/minsans_regular"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료 세트 수"
                android:textSize="25dp"
                android:textColor="#998FEF"/>

            <TextView
                android:id="@+id/going_set"
                android:fontFamily="@font/minsans_regular"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="#FB0000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/minsans_regular"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표 세트 수"
                android:textSize="25dp"
                android:textColor="#998FEF"/>

            <TextView
                android:fontFamily="@font/minsans_regular"
                android:id="@+id/goal_set"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="#002AFB"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 운동 시간"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:fontFamily="@font/minsans_regular"
        android:textColor="#998FEF"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:fontFamily="@font/minsans_regular"
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:fontFamily="@font/minsans_regular"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text=":"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <TextView
            android:fontFamily="@font/minsans_regular"
            android:id="@+id/seconds"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:fontFamily="@font/minsans_regular"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text=":"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <TextView
            android:fontFamily="@font/minsans_regular"
            android:id="@+id/m_seconds"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/left_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/minsans_regular"
            android:textSize="20dp"
            android:textColor="#998FEF"/>

        <TextView
            android:id="@+id/weigh_info"
            android:fontFamily="@font/minsans_regular"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70dp"
            android:text="운동 중.."
            android:textColor="#6B5ED7"/>


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp">


        <androidx.appcompat.widget.AppCompatImageButton

            android:src="@drawable/ic_baseline_play_arrow_24"
            android:id="@+id/start_button"
            android:background="@drawable/button_background"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:fontFamily="@font/minsans_regular"
            android:textColor="@color/white"
            android:text="휴식"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/rest_button"
            android:background="@drawable/button_background"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:src="@drawable/ic_baseline_home_24"
            android:id="@+id/reset_button"
            android:background="@drawable/button_background"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

</LinearLayout>